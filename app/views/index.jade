html(ng-app='app', ng-controller='AppController')
  head
    meta(charset='utf-8')
    title frontendboilerplate
    meta(name='description', content='')
    meta(property='og:description', content='')

    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-title', content='frontendboilerplate')
    meta(name='mobile-web-app-capable', content='yes')
    meta(name='mobile-web-app-title', content='frontendboilerplate')

    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    <!-- build:css styles/vendor.css -->
    <!-- inject:css -->
    link(rel='stylesheet', href='../node_modules/bootstrap/dist/css/bootstrap.css')
    <!-- endinject -->
    <!-- endbuild -->

    <!-- build:css(.tmp) styles/app.css -->
    <!-- inject:css -->
    link(rel='stylesheet', href='styles/app.css')
    <!-- endinject -->
    <!-- endbuild -->

    // FAVICON
    link(rel='shortcut icon', href='images/favicon.ico', type='image/x-icon')
    link(rel='icon', href='images/favicon.ico', type='image/x-icon')
  body
    .container
      .row
        .col-xs-offset-1.col-xs-10
          input#theInput.form-control

    <!-- build:js(.tmp) scripts/vendor.js -->
    <!-- inject:js -->
    script(src='scripts/vendor.js')
    <!-- endinject -->
    <!-- endbuild -->

    <!-- build:js(.tmp) scripts/app.js -->
    <!-- inject:js -->
    script(src='scripts/app.js')
    <!-- endinject -->
    <!-- endbuild -->
